# Use an official OpenJDK image as the base image
FROM openjdk:17-jdk-slim AS build

# Set the working directory inside the container
WORKDIR /app

# Copy the required files for building (without node_modules)
COPY build.gradle .
COPY settings.gradle .
COPY gradle/ gradle/
COPY src/ src/

# Ensure gradlew has execute permissions
COPY gradlew .  # Explicitly copy gradlew into /app directory

RUN chmod +x ./gradlew

# Build the Spring Boot application with Gradle
RUN ./gradlew clean build -x test

# Use a lighter OpenJDK runtime for the final image
FROM openjdk:17-jdk-slim

# Set the working directory for the runtime environment
WORKDIR /app

# Copy the built JAR file from the build stage
COPY --from=build /app/build/libs/*.jar /app/app.jar

# Expose the default Spring Boot port
EXPOSE 9090

# Run the Spring Boot application with the embedded Tomcat
ENTRYPOINT ["java", "-jar", "/app/app.jar"]
